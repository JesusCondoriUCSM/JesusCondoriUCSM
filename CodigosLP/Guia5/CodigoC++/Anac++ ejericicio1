#include<iostream>
#include<string>

class Producto {
	std::string nombre;
	double precio;
	int cantidad;
	
public:
	// Constructor
	Producto(std::string n, double p, int c) : nombre(n), precio(p), cantidad(c) {}
	
	// Destructor
	~Producto() {}
	
	// Metodo para mostrar los detalles del producto
	void mostrarDetalles() {
		std::cout << "Nombre: " << nombre << "\n";
		std::cout << "Precio: " << precio << "\n";
		std::cout << "Cantidad: " << cantidad << "\n";
	}
};

int main() {
	std::string nombre;
	double precio;
	int cantidad;
	int opcion;
	
	Producto* p1 = nullptr; //puntero nulo
	
	do {
		std::cout << "\n1. Agregar producto\n";
		std::cout << "2. Mostrar detalles del producto\n";
		std::cout << "3. Salir\n";
		std::cout << "Ingrese una opcion: ";
		std::cin >> opcion;
		
		switch(opcion) {
		case 1:
			std::cout << "Ingrese el nombre del producto: ";
			std::cin >> nombre;
			std::cout << "Ingrese el precio del producto: ";
			std::cin >> precio;
			std::cout << "Ingrese la cantidad del producto: ";
			std::cin >> cantidad;
			p1 = new Producto(nombre, precio, cantidad);
			break;
		case 2:
			if(p1 != nullptr) { //puntero nulo
				p1->mostrarDetalles();
			} else {
				std::cout << "No se ha agregado ningun producto.\n";
			}
			break;
		case 3:
			std::cout << "Saliendo del programa.\n";
			break;
		default:
			std::cout << "Opcion no valida.\n";
		}
	} while(opcion != 3);
	
	delete p1;
	
	return 0;
}
